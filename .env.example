# ======================================
# CONFIGURAÇÕES GERAIS DO PROJETO
# ======================================

PROJECT_NAME=nomedosite                         # Prefixo único do projeto

# ======================================
# CONFIGURAÇÕES DO MYSQL (SERVIÇO: db)
# ======================================

MYSQL_ROOT_PASSWORD=SUA_SENHA_ROOT_AQUI         # Senha do root do MySQL
MYSQL_DATABASE=nome_do_banco                    # Nome do banco de dados
MYSQL_USER=usuario_do_banco                     # Usuário do banco
MYSQL_PASSWORD=SUA_SENHA_FORTE_AQUI             # Senha do usuário

# ======================================
# CONFIGURAÇÕES DO REDIS (SERVIÇO: redis)
# ======================================

REDIS_PASSWORD=SUA_SENHA_REDIS_AQUI             # Senha do Redis
REDIS_MAXMEMORY=1gb                             # Limite de memória do Redis

# ======================================
# CONFIGURAÇÕES DO WORDPRESS (SERVIÇO: wordpress)
# ======================================

WORDPRESS_URL=seusite.com.br                    # Domínio principal (sem www)
WORDPRESS_ALT_URL=www.seusite.com.br            # Domínio alternativo (com www)

# ======================================
# CONFIGURAÇÕES DO PHPMYADMIN (SERVIÇO: phpmyadmin)
# ======================================

PMA_PORT=8081                                   # Porta local (127.0.0.1:${PMA_PORT})

# ======================================
# CONFIGURAÇÕES DE REDE
# ======================================

NETWORK_NAME=wordpress                          # Nome da rede Docker externa
