# ======================================
# NOME DO PROJETO (SERVIÇO: traefik)
# ======================================

PROJECT_NAME=meuprojeto                          # Nome único do projeto

# ======================================
# CONFIGURAÇÕES DO MYSQL (SERVIÇO: db)
# ======================================

MYSQL_ROOT_PASSWORD=troque_esta_senha_root       # Senha do root do MySQL
MYSQL_DATABASE=seu_banco_de_dados                # Nome do banco de dados
MYSQL_USER=usuario_do_banco                      # Usuário do banco
MYSQL_PASSWORD=senha_do_usuario                  # Senha do usuário

# ======================================
# CONFIGURAÇÕES DO REDIS (SERVIÇO: redis)
# ======================================

REDIS_PASSWORD=senha_do_redis                    # Senha do Redis
REDIS_MAXMEMORY=256mb                            # Memória máxima do Redis

# ======================================
# CONFIGURAÇÕES DO WORDPRESS (SERVIÇO: wordpress)
# ======================================

WORDPRESS_URL=wp.seudominio.com.br               # Domínio principal (sem www)
WORDPRESS_ALT_URL=www.wp.seudominio.com.br       # Domínio alternativo (com www)

# ======================================
# CONFIGURAÇÕES DO PHPMYADMIN (SERVIÇO: phpmyadmin)
# ======================================

PMA_PORT=8081                                    # Porta local do phpMyAdmin

# Use uma porta diferente para cada stack, exemplo: 8081, 8082, etc.

# ======================================
# CONFIGURAÇÕES DE REDE (DOCKER NETWORK)
# ======================================

NETWORK_NAME=wordpress                           # Nome da rede Docker externa compartilhada
